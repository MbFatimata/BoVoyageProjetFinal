@model IEnumerable<IGrouping<String, BoVoyageProjetFinal.Models.Travel>>
@{
    Layout = null;
}

<table class="table table-hover">
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-primary">
                <th colspan="3">
                    @item.Key
                </th>
            </tr>

            <tr>
                <th>
                    Date de départ
                </th>
                <th>
                    Date de retour
                </th>
                <th>
                    Prix tout compris
                </th>
            </tr>

            foreach (var travel in item)
            {
                <tr>
                    <td>
                        @travel.DepartureDate
                    </td>
                    <td>
                        @travel.ReturnDate
                    </td>
                    <td>
                        @travel.AllInclusivePrice
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
