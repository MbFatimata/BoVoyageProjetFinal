@model IEnumerable<BoVoyageProjetFinal.Models.Travel>

@{
    ViewBag.Title = "Index";
}

<h2>Liste des voyages</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-info"><i class="fa fa-plus"></i> Ajouter un voyage</a>
</p>
<p>
    <a href="@Url.Action("Search")" class="btn btn-info"><i class="fa fa-plus"></i> Rechercher un voyage</a>
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Destination.Continent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TravelAgency.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartureDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailablePlaces)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllInclusivePrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Destination.Continent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelAgency.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailablePlaces)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllInclusivePrice)
            </td>
            <td>
                <a href="@Url.Action( "Edit", new { id=item.ID})"><i class="fa fa-edit text-warning"></i></a>
                <a href="@Url.Action( "Details", new { id=item.ID})"><i class="fa fa-search"></i></a>
                <a href="@Url.Action( "Delete", new { id=item.ID})"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
    }

</table>
