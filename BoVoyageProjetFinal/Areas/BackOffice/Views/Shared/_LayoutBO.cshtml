@{ 
    Layout = null;
    var user = Session["USER_BO"] as BoVoyageProjetFinal.Models.Salesman;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Backoffice | @ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/boVoyage.css" rel="stylesheet" />

</head>

<body>
    <div class="container">
        <h1>BackOffice</h1>
        <nav class="navbar navbar-expand-lg navbar-light bg-info">
            <a class="navbar-brand" href=""></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home", new { area="" })"><i class="fa fa-home"></i><span class="sr-only">Current</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "Dashboard")">BackOffice</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Agences
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index", "TravelAgenciesBO")">Voir</a>
                            <a class="dropdown-item" href="@Url.Action("Create", "TravelAgenciesBO")">Ajouter</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Voyage
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index", "TravelsBO")">Voir</a>
                            <a class="dropdown-item" href="@Url.Action("Create", "TravelsBO")">Ajouter</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Destination
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index", "DestinationsBO")">Voir</a>
                            <a class="dropdown-item" href="@Url.Action("Create", "DestinationsBO")">Ajouter</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Dossier réservation
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index", "ReservationDossiersBO")">Voir</a>
                            <a class="dropdown-item" href="@Url.Action("Create", "ReservationDossiersBO")">Ajouter</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Agent commercial
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index", "SalesmenBO")">Voir</a>
                            <a class="dropdown-item" href="@Url.Action("Create", "SalesmenBO")">Ajouter</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Client
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index", "ClientsBO")">Voir</a>
                            <a class="dropdown-item" href="@Url.Action("Create", "ClientsBO")">Ajouter</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        @if (user != null)
        {
        <div class="bg-info text-right" style="margin-bottom: 2px;">
            <span class="text-white">
                Bonjour <b class="text-white">@user.FirstName @user.LastName</b> !
            </span>
            <span class="text-white">
                <a href="@Url.Action("Edit", "SalesmenBO", new { id=user.ID})" class="col-2 btn-outline-dark text-white">mon profil</a>
            </span>
            <span class="text-white">
                <a href="@Url.Action("Logout", "AuthenticationSalesman")" class="col-2 btn-outline-dark text-white"><i class="fa fa-sign-out"></i>Se déconnecter</a>
            </span>
        </div>
        }

            @Html.Partial("_DisplayMessage")

            @RenderBody()
            <footer class="bg-info">
                &copy; 2018 BoVoyage - BACKOFFICE
            </footer>
        </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("SectionScripts", false)
</body>
</html>