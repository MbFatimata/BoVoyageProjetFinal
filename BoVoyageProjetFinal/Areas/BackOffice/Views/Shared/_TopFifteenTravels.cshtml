@model IEnumerable<BoVoyageProjetFinal.Models.Travel>
@{
    Layout = null;
}

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Destination.Continent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TravelAgency.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartureDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailablePlaces)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllInclusivePrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Destination.Continent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelAgency.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailablePlaces)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllInclusivePrice)
            </td>
            <td>
                <a href="@Url.Action( "Edit", "TravelsBO", new { id=item.ID})" data-toggle="tooltip" data-placement="top" title="Editer"><i class="fa fa-edit text-warning"></i></a>
                <a href="@Url.Action( "Details", "TravelsBO", new { id=item.ID})" data-toggle="tooltip" data-placement="top" title="Details"><i class="fa fa-search"></i></a>
                <a href="@Url.Action( "Delete", "TravelsBO", new { id=item.ID})" data-toggle="tooltip" data-placement="top" title="Supprimer"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
    }
</table>
